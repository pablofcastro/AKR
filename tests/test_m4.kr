plts: 

module plts
    s : [0..4];   
    initial: bool;
    fin : bool;
    
    [a] (s=0 & initial=true & fin = false) -> 1:(s'=2)&(initial'=false) & (fin'=false);
   
    [b] (s=1 & initial=true & fin = false) -> 1:(s'=3) & (initial'=false) & (fin'=false);
   
    [b](s=2 & initial=false & fin = false) -> 1:(s'=4) & (initial'=false) & (fin'=true); 

    [a](s=3 & initial=false & fin = false) -> 1:(s'=4) & (initial'=false) & (fin'=true);

endmodule
endplts
perception : (a.b) + (b.a)
endperception
property : Kh(initial,fin) >= 1
endproperty 