    [b] (s=2 & initial=false & fin = false) -> 0.9:(s'=3) & (initial'=false) & (fin'=false) + 0.1:(s'=4) & (initial'=false) & (fin'=true);
    
    [c] (s=2 & initial=false & fin = false) -> 0.1:(s'=3) & (initial'=false) & (fin'=false) + 0.9:(s'=4) & (initial'=false) & (fin'=true);

endmodule
